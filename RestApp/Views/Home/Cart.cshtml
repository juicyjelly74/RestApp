@model IEnumerable<RestApp.Models.Card>
@{
    ViewBag.Title = "Card";
}
<div class="main-image">
    <div class="main-image-content">
        your
        <p>shopping card</p>
    </div>
</div>

<div class="container">
    <table id="cart" class="table table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Product</th>
                <th style="width:10%">Price</th>
                <th style="width:8%">Quantity</th>
                <th style="width:22%" class="text-center">Subtotal</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
@foreach (var item in Model)
{
        <tbody>
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="@Url.Action("GetImageDish", new { id =item.DishID})" /></div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">@Html.DisplayFor(modelItem => item.Dishes.Name)</h4>
                            <p>@Html.DisplayFor(modelItem => item.Dishes.Description)</p>
                        </div>
                    </div>
                </td>
                <td data-th="Price">@Html.DisplayFor(modelItem => item.Dishes.Price) $</td>
                <td data-th="Quantity">
                    @Html.DisplayFor(modelItem => item.Ammount)
                </td>
                <td class="actions" data-th="">
                  @*@using (Html.BeginForm(Html.BeginForm("Delete", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })))
                  {
                    @Html.AntiForgeryToken()*@  
                      <button type="button" class="btn btn-default btn-circle">
                        <span class="glyphicon glyphicon-remove">@Html.ActionLink(" ", "Delete", "Home", new { id = item.Id }, "")</span>
                    </button>
    
                  @*}*@
                </td>
            </tr>
        </tbody>
}
        <tfoot>
            <tr class="visible-xs">
                <td class="text-center"><strong>Total  @ViewBag.Subtotal</strong></td>
            </tr>

            <tr>
                <td><button class="btn" href="#"><i class="fa fa-angle-left"></i>@Html.ActionLink("Continue Shopping", "Menu", "Home")</button></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Total @ViewBag.Subtotal $</strong></td>
                <td><button class="btn" href="#">Checkout <i class="fa fa-angle-right"></i></button></td>
            </tr>
        </tfoot>
    </table>
</div>
